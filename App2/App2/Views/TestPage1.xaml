<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App2.CustomRenderer"
              x:Class="App2.Views.TestPage1">
    <StackLayout Padding="20">
        <StackLayout BackgroundColor="#ffffff" Orientation="Horizontal" HorizontalOptions="FillAndExpand" x:Name="stackWeight">
            <StackLayout Orientation="Vertical" HorizontalOptions="Fill" Spacing="0" Padding="0,10,0,0">
                
                <local:BorderEntry  x:Name="txtEntry"
                                    Margin="0,4,0,0"
                                    Text="Submiit" HeightRequest="40"
                                   FontSize="18"
                                   Focused="BorderEntry_Focused"
                                   HorizontalOptions="FillAndExpand"
                                   BackgroundColor="Red">
                    <Entry.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Entry.GestureRecognizers>
                </local:BorderEntry>
            </StackLayout>
        </StackLayout>
        
    </StackLayout>
</ContentPage>